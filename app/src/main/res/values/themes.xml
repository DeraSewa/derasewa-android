<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Derasewa" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.Derasewa" parent="Base.Theme.Derasewa" />

    <style name="primaryButton">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:height">65dp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="secondaryButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:height">65dp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:strokeColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="link">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>
</resources>